.rubiks
  position: relative;
  width: 100vw;
  height: 100vh;
  background: radial-gradient(circle at center, #fff, #FF6464);
  &__button
    position: absolute;
    bottom: BS * 100;
    right: BS * 100;
    border-radius: 50%;
    border: solid BS*10 #000;
    width: BS * 120;
    height: BS * 120;
    background: White;
    cursor: pointer;
    transition: transform 0.1s ease-out;
    &:hover
      transform: scale(0.95);
    &:active
      transform: scale(1);
    &:focus
      outline: none;
  &__svgwrapper
    position: relative;
  &__canvas
    width: BS * 100;
  &__svg
    position: absolute;
    top: 49%;
    left: 50%;
    width: 100%;
    height: 100%;
    transform: translate(-50%, -50%);
